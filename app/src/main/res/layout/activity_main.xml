<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHeader"
        android:text="Choose AR Experience"
        android:textSize="25sp"
        android:padding="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnPlacingObjectsLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textColor="#FFF"
        android:padding="15sp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/txtHeader"
        android:layout_centerHorizontal="true"
        android:text="Launch Placing 3D Objects"/>

    <Button
        android:id="@+id/btnCarModelLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textColor="#FFF"
        android:padding="15sp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/btnPlacingObjectsLaunch"
        android:layout_centerHorizontal="true"
        android:text="Launch Tesla Car Model"/>

    <Button
        android:id="@+id/btnMotionPosterLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textColor="#FFF"
        android:padding="15sp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/btnCarModelLaunch"
        android:layout_centerHorizontal="true"
        android:text="Launch Black Panther Poster"/>

    <ImageView
        android:id="@+id/imgViroLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_below="@+id/btnMotionPosterLaunch"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_viro_logo_light"/>

</RelativeLayout>